#!/usr/bin/env perl
use v5.10.0;
use strict;
use warnings;
use Exobrain;

# PODNAME: tweet-notify
# ABSTRACT: Send all tweets to the user to notify.

my $exobrain = Exobrain->new;

$exobrain->watch_loop(
    class  => 'Measurement::Tweet',
    filter => sub { $_->to_me },
    then   => sub {
        $exobrain->notify( $_->summary );
    },
);

__END__

=pod

=encoding UTF-8

=head1 NAME

tweet-notify - Send all tweets to the user to notify.

=head1 VERSION

version 0.06

