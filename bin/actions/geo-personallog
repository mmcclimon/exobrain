#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

# PODNAME: geo-personallog
# ABSTRACT: Log our own check-ins to a personal log (such as idonethis).

use Exobrain;

my $exobrain = Exobrain->new;

$exobrain->watch_loop(
    class  => 'Measurement::Geo',
    filter => sub { $_->is_me },
    then   => sub {
        my $event = shift;
        $exobrain->intent("PersonalLog",
            message => $event->summary
        )->send_msg;
    },
);

__END__

=pod

=encoding UTF-8

=head1 NAME

geo-personallog - Log our own check-ins to a personal log (such as idonethis).

=head1 VERSION

version 0.06

