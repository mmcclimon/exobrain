#!/usr/bin/perl
use 5.010;
use strict;
use warnings;
use autodie;
use Exobrain;

# PODNAME: notify
# ABSTRACT: Send an exobrain notify intent from the cmdline

@ARGV or die "Usage: $0 message\n";

my $exobrain = Exobrain->new;

$exobrain->notify("@ARGV");

__END__

=pod

=encoding UTF-8

=head1 NAME

notify - Send an exobrain notify intent from the cmdline

=head1 VERSION

version 0.06

