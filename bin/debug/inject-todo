#!/usr/bin/perl
use 5.010;
use strict;
use warnings;
use utf8::all;
use autodie qw(:all);

# PODNAME: inject-todo
# ABSTRACT: Inject TODO packets directly onto the exobrain bus

use Exobrain::Bus;
use Exobrain::Message;
use JSON::Any;
use Config::Tiny;
use Date::Manip::Date;

my $bus  = Exobrain::Bus->new( type => 'PUB' );

my $todo = "@ARGV";
my $epoch_time = time();

my $msg = Exobrain::Message->new(
    namespace => 'TODO',
    timestamp => $epoch_time,
    source    => 'CMDLINE',
    data      => { tags => ['todo'], },
    raw       => { tags => ['todo'], text => $todo },
    summary   => $todo,
)->send_msg( $bus->_socket );

__END__

=pod

=encoding UTF-8

=head1 NAME

inject-todo - Inject TODO packets directly onto the exobrain bus

=head1 VERSION

version 0.06

