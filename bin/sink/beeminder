#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

use Exobrain;
use WebService::Beeminder;

# PODNAME: beeminder
# ABSTRACT: Send beeminder intends to Beeminder

my $exobrain = Exobrain->new;

my $config = $exobrain->config->{Beeminder};

my $bee = WebService::Beeminder->new(
    token => $config->{auth_token},
);

$exobrain->watch_loop(
    class => 'Intent::Beeminder',
    then  => sub {
        my $event = shift;
        $bee->add_datapoint(
            goal    => $event->goal,
            value   => $event->value,
            comment => $event->comment // "",
        );
    }
);

__END__

=pod

=encoding UTF-8

=head1 NAME

beeminder - Send beeminder intends to Beeminder

