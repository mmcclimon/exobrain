#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

# PODNAME: router
# ABSTRACT: Exobrain router. This *must* be running for exobrain to work

use Exobrain::Router;

my $router = Exobrain::Router->new(
    server => 1,
);

$router->start;

__END__

